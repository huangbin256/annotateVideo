@import "../pcss/utils.pcss";

button, .btn{
	background: none;
	border: none;
	border-radius: 2px;
	font-size: 14px;
	display: inline-block;
	height: 36px;
	line-height: 36px;
	padding: 0 2rem;
	vertical-align: middle;
	-webkit-tap-highlight-color: transparent;
	cursor: pointer;
	transition: .3s ease-out;
	position: relative;
	overflow: hidden;
	user-select: none;
	background-color: #dddddd;
	
	&:hover{
		background-color: #999999;
	}

	&:focus{
		outline: none;
		background-color: #999999;
	}

	@mixin ripple;

}